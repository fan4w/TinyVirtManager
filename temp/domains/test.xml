<domain type='kvm'>
  <name>test</name>
  <memory unit='KiB'>2097152</memory>  <!-- 2 GB内存 -->
  <vcpu placement='static'>2</vcpu>  <!-- 2个虚拟CPU -->
  <os>
    <boot dev='cdrom'/>
    <boot dev='hd'/>
  </os>
  <features>
    <kvm>
      <hidden state='on'/>
    </kvm>  <!-- 启用KVM加速 -->
  </features>
  <devices>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw'/>
      <source file='/home/admin/kubevirt-study/image/disk.img'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <cdrom type='file'>
      <source file='/home/admin/kubevirt-study/image/debian-12.7.0-amd64-netinst.iso'/>
      <target dev='hdc'/>
    </cdrom>
  </devices>
  <!-- QMP配置 -->
  <qemu:commandline>
    <qemu:arg value='-qmp'/>
    <qemu:arg value='unix:/tmp/qmp-socket,server,nowait'/>
    <qemu:arg value='-monitor'/>
    <qemu:arg value='stdio'/>
  </qemu:commandline>
</domain>
